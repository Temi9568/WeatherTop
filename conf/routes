# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /dashboard                              Dashboard.index
POST    /dashboard/{id}/addReading              Dashboard.addReading
POST    /dashboard/deleteReading/{stationId}/{readingId}           Dashboard.deleteReading
POST    /dashboard/addStation                   Dashboard.addStation
POST    /dashboard/deleteStation/{id}           Dashboard.deleteStation
GET     /about                                  About.index
GET     /admin                                  Admin.index
GET     /member                                 Account.memberPage
POST    /member                                 Account.editMemberDetails
GET     /login                                  Account.login
GET     /logout                                 Account.logout
POST    /authenticate                           Account.authenticate
GET     /signup                                 Account.signup
POST    /register                               Account.register
GET     /station/{id}                           StationView.index

GET     /playlists/{id}                         PlaylistCtrl.index
GET     /playlists/{id}/deletesong/{songid}     PlaylistCtrl.deleteSong

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
